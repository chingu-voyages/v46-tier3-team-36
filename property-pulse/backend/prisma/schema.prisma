generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                            Int            @id @default(autoincrement())
  name                          String?
  password                      String?
  email                         String         @unique
  emailVerified                 DateTime?
  image                         String?
}

model Session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
  @@map(name: "session")
}